= javascript_include_tag 'calendar'
= stylesheet_link_tag params[:controller], 'dashboard'
%main.mdl-layout__content.mdl-color--grey-100
    %h5.header= @month_info
    .mdl-grid.demo-content
    = month_calendar do |date|
        %div.date-id= date.day
        - @meetings.each do |meeting|
            %div.details
                -if date == meeting.dates
                    = meeting.name
                    = meeting.start_time.strftime("%I:%M%p") + " to " +  meeting.end_time.strftime("%I:%M%p")