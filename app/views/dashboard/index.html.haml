= javascript_include_tag params[:controller]
= stylesheet_link_tag params[:controller]
= stylesheet_link_tag "https://use.fontawesome.com/releases/v5.8.1/css/all.css"
// %link href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" rel="stylesheet" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous"

%body
= content_tag :div, id: 'trackers', data: {trackers: @out_subjects} do end

.demo-layout.mdl-layout.mdl-js-layout.mdl-layout--fixed-drawer.mdl-layout--fixed-header
  %header.demo-header.mdl-layout__header.mdl-color--grey-100.mdl-color-text--grey-600
    .mdl-layout__header-row
      %span.mdl-layout-title Home
      .mdl-layout-spacer
      = link_to image_tag( '/assets/ASC_logo.png', width: '125', height: '75'), 'https://successcenter.tamu.edu/'
    
  .demo-drawer.mdl-layout__drawer.mdl-color--blue-grey-900.mdl-color-text--blue-grey-50
    %header.demo-drawer-header
      %img.demo-avatar{:src => "https://www.clipartmax.com/png/small/15-153139_big-image-login-icon-with-transparent-background.png"}/
      .name
        %span= @current_user.first_name + " " + @current_user.last_name
        .mdl-layout-spacer
    %nav.demo-navigation.mdl-navigation.mdl-color--blue-grey-800
      %a.mdl-navigation__link{:href => "/dashboard/index"}
        %i.mdl-color-text--blue-grey-400.material-icons{:role => "presentation"}> home
        Home
      %a.mdl-navigation__link{:href => "/calendar/index"}
        %i.m-dl-color-text--blue-grey-400.material-icons{:role => "presentation"}> calendar_today
        Calendar
      %a.mdl-navigation__link{:href => "/setup/new"}
        %i.mdl-color-text--blue-grey-400.material-icons{:role => "presentation"}> settings
        Setup
      %a.mdl-navigation__link{:href => "/setup/destroy"}
        %i.mdl-color-text--blue-grey-400.material-icons{:role => "presentation"}> delete
        Delete Completed Study Plans
      %a.mdl-navigation__link{:href => logout_path}
        %i.mdl-color-text--blue-grey-400.material-icons{:role => "presentation"}> power_settings_new
        Logout  
  -if params[:controller] == 'dashboard'
    =render partial: "dashboard/partials/home"
  -if params[:controller] == 'calendar'
    =render partial: "calendar/calendar"
